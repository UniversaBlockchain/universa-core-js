{
  "compilerOptions": {
    "typeRoots" : ["./node_modules/@types", "./src/@types"],

    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",

    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./dist/types",

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strictNullChecks": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts"
  ],
  "include": [
    "src/**/*"
  ]
}
